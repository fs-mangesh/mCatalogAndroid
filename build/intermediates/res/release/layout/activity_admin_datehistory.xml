<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bar"
        android:id="@+id/screenName"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        android:gravity="center"
        android:text="Date history"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@id/screenName"
        android:id="@+id/layoutSpinner"
        android:background="@drawable/header">

        <EditText
            android:id="@+id/textDate"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:hint="Enter date"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/editbox_background"
            android:focusable="false"
            android:gravity="center"
             />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutHeader"
        android:layout_below="@id/layoutSpinner"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="Checkout"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="Checkin"
            android:textSize="20dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <ListView
        android:id="@+id/datelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layoutHeader"/>


</RelativeLayout><!-- From: file:/Users/afour/Desktop/Parse-Todo-Project-1/ToDoList/res/layout/activity_admin_datehistory.xml -->