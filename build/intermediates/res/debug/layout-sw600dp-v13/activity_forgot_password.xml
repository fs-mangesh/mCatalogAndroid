<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/bar"
        android:id="@+id/screenName"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        android:gravity="center"
        android:text="Forgot Password"/>


    <LinearLayout
        android:id="@+id/frgtLinLAyout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/screenName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="22dp"
            android:textColor="#214870"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    
     <EditText
        android:id="@+id/frgtPasswdTxt"
        android:layout_width="400dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/frgtLinLAyout"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:hint="Enter Email"
        android:background="#FFFFFF"
        android:inputType="text" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:id="@+id/imgLine"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bar"
        android:layout_below="@id/frgtPasswdTxt"/>
     
     <Button
         android:id="@+id/btnResetPasswd"
         android:layout_width="180dp"
         android:layout_height="40dp"
         android:background="@drawable/button1"
         android:layout_below="@id/imgLine"
         android:text="Reset"
         android:textSize="22dp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"
         android:textColor="@android:color/white"/>
         

</RelativeLayout><!-- From: file:/Users/afourtest/AndroidStudioProjects/mCatalogue/mCatalogue/res/layout-sw600dp/activity_forgot_password.xml -->