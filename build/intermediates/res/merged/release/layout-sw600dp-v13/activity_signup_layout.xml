<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <EditText
        android:id="@+id/signupEmailTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Email"
        android:inputType="text" />

    <EditText
        android:id="@+id/signupUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signupEmailTxt"
        android:hint="Username"
        android:inputType="text" />
    =

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupUsername"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"  />

    <EditText
        android:id="@+id/signupConfirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signupPassword"
        android:hint="Confirm Password"
        android:inputType="textPassword"  />

    <EditText
        android:id="@+id/signupCompanyName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/signupConfirmPassword"
        android:hint="Company"
        android:inputType="text"  />



    <TextView
        android:id="@+id/txtAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        android:layout_below="@id/signupCompanyName"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBtnAdmin"
        android:layout_toRightOf="@id/txtAdmin"
        android:layout_below="@id/signupCompanyName"
        android:onClick="adminBtnClicked"/>




    <Button
        android:id="@+id/btnsignFrgtPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/checkBtnAdmin"
        android:background="@drawable/button"
        android:text="Sign Up"
        android:textColor="@android:color/white" />

</RelativeLayout>